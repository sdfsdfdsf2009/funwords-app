import React, { useState, useEffect, useCallback } from 'react';
import {
  Video,
  Play,
  Download,
  Settings,
  ChevronDown,
  CheckCircle,
  XCircle,
  AlertCircle,
  Clock,
  Image,
  Zap,
  Eye,
  RotateCw,
  Trash2,
  Copy,
  Film,
  Key,
  AlertTriangle
} from 'lucide-react';
import {
  GeneratedVideo,
  VideoGenerationSettings,
  Scene,
  GeneratedImage,
  ImageGenerationProgress
} from '../../types';
import { ImagePreviewModal } from './ImagePreviewModal';
import { VideoPresetManager } from './VideoPresetManager';
import { VideoThumbnail } from './VideoThumbnail';
import { useProjectStore } from '../../stores/projectStore';
import { useAPIConfigStore } from '../../stores/apiConfigStore';
import { useVideoTaskStore } from '../../stores/videoTaskStore';
import { logger } from '../../utils/logger';
import { parseVideoError } from '../../utils/errorHandler';
import { videoThumbnailManager } from '../../utils/videoThumbnail';
import { ProgressContainer, VideoTask, VideoTaskStatus } from './ProgressContainer';
import { errorMonitor } from '../../utils/errorMonitor';
import { useAsyncErrorBoundary } from '../ui/ErrorBoundaryWrapper';

// 错误处理增强版本的视频生成组件
export const VideoGenerationWithErrorHandling: React.FC<{ className?: string }> = ({ className = '' }) => {
  const { captureError } = useAsyncErrorBoundary();

  // 状态管理 - 添加错误状态
  const [componentError, setComponentError] = useState<Error | null>(null);
  const [selectedSceneId, setSelectedSceneId] = useState<string>('');
  const [selectedImageIds, setSelectedImageIds] = useState<string[]>([]);
  const [selectedConfig, setSelectedConfig] = useState<string>('');
  const [isGenerating, setIsGenerating] = useState(false);
  const [generationHistory, setGenerationHistory] = useState<GeneratedVideo[]>([]);
  const [showAdvanced, setShowAdvanced] = useState(false);
  const [playingVideoId, setPlayingVideoId] = useState<string | null>(null);
  const [currentTask, setCurrentTask] = useState<any>(null);
  const [taskProgress, setTaskProgress] = useState(0);
  const [pollingInterval, setPollingInterval] = useState<NodeJS.Timeout | null>(null);
  const [taskConfigs, setTaskConfigs] = useState<Map<string, any>>(new Map());
  const [taskPollingIntervals, setTaskPollingIntervals] = useState<Map<string, NodeJS.Timeout>>(new Map());

  // 错误状态
  const [apiErrors, setApiErrors] = useState<Map<string, string>>(new Map());
  const [networkError, setNetworkError] = useState<string | null>(null);

  // 图片预览状态
  const [previewImage, setPreviewImage] = useState<GeneratedImage | null>(null);
  const [isPreviewModalOpen, setIsPreviewModalOpen] = useState(false);

  // Store hooks
  const {
    tasks: videoTasks,
    loadTasks: loadVideoTasks,
    addTask: addVideoTask,
    updateTask: updateVideoTask,
    deleteTask: deleteVideoTask,
    isLoading: isTasksLoading,
    error: tasksError
  } = useVideoTaskStore();

  const [showProgressContainer, setShowProgressContainer] = useState(true);

  const {
    currentProject,
    getSceneSelectedImages,
    isImageSelected,
    addGeneratedVideo
  } = useProjectStore();

  const { configurations, selectedConfigId, selectConfig, getActiveConfig } = useAPIConfigStore();

  // Get scenes from current project
  const scenes = currentProject?.scenes || [];

  // 安全的错误处理包装器
  const withErrorHandling = useCallback(async <T>(
    operation: () => Promise<T>,
    operationName: string,
    context?: any
  ): Promise<T | null> => {
    try {
      errorMonitor.logUserAction('async-operation', 'start', {
        operation: operationName,
        context
      });

      const result = await operation();

      errorMonitor.logUserAction('async-operation', 'success', {
        operation: operationName,
        context
      });

      return result;
    } catch (error) {
      const errorMessage = error instanceof Error ? error.message : String(error);

      errorMonitor.logError({
        type: 'javascript',
        message: `${operationName}失败: ${errorMessage}`,
        source: 'VideoGenerationWithErrorHandling.withErrorHandling',
        context: {
          operation: operationName,
          error: error instanceof Error ? error.stack : String(error),
          context
        }
      });

      errorMonitor.logUserAction('async-operation', 'error', {
        operation: operationName,
        error: errorMessage,
        context
      });

      // 特定错误处理
      if (errorMessage.includes('network') || errorMessage.includes('fetch')) {
        setNetworkError('网络连接出现问题，请检查网络连接后重试');
      } else if (errorMessage.includes('timeout')) {
        setNetworkError('请求超时，请稍后重试');
      } else {
        setApiErrors(prev => new Map(prev).set(operationName, errorMessage));
      }

      // 对于关键错误，使用useAsyncErrorBoundary抛出让错误边界处理
      if (errorMessage.includes('critical') || operationName.includes('initialization')) {
        captureError(error instanceof Error ? error : new Error(errorMessage));
      }

      return null;
    }
  }, [captureError]);

  // 初始化错误处理
  useEffect(() => {
    const initializeComponent = async () => {
      try {
        errorMonitor.logUserAction('component', 'mount', 'VideoGeneration');

        await withErrorHandling(
          () => loadVideoTasks(),
          'initialization',
          { component: 'VideoGeneration' }
        );

      } catch (error) {
        console.error('Failed to initialize VideoGeneration component:', error);
        setComponentError(error instanceof Error ? error : new Error('初始化失败'));
      }
    };

    initializeComponent();
  }, [loadVideoTasks, withErrorHandling]);

  // 带错误处理的加载历史记录
  const loadVideoHistory = useCallback(() => {
    return withErrorHandling(async () => {
      if (!currentProject || !scenes) return;

      const allVideos: GeneratedVideo[] = [];
      scenes.forEach(scene => {
        if (scene.generatedVideo && (!scene.generatedVideos || scene.generatedVideos.length === 0)) {
          allVideos.push(scene.generatedVideo);
        } else if (scene.generatedVideos && scene.generatedVideos.length > 0) {
          allVideos.push(...scene.generatedVideos);
        }
      });

      allVideos.sort((a, b) => new Date(b.createdAt).getTime() - new Date(a.createdAt).getTime());
      setGenerationHistory(allVideos);
    }, 'loadVideoHistory');
  }, [currentProject, scenes, withErrorHandling]);

  // 带错误处理的视频生成
  const handleGenerateVideo = async () => {
    if (selectedImageIds.length === 0 || !selectedSceneId) {
      alert('请先选择要生成视频的图片');
      return;
    }

    setIsGenerating(true);
    setNetworkError(null);
    setApiErrors(new Map());

    try {
      errorMonitor.logUserAction('video-generation', 'start', {
        selectedImageCount: selectedImageIds.length,
        sceneId: selectedSceneId
      });

      const result = await withErrorHandling(async () => {
        // 这里包含原来VideoGeneration的生成逻辑
        // 简化版本的实现，实际应该包含完整的视频生成逻辑
        const selectedImages = selectedImageIds.map(id =>
          scenes.find(s => s.images?.find(img => img.id === id))?.images?.find(img => img.id === id)
        ).filter(Boolean) as GeneratedImage[];

        if (selectedImages.length === 0) {
          throw new Error('没有找到选中的图片');
        }

        // 模拟视频生成过程
        for (const image of selectedImages) {
          await new Promise(resolve => setTimeout(resolve, 1000)); // 模拟API调用

          const generatedVideo: GeneratedVideo = {
            id: `video-${Date.now()}-${image.id}`,
            url: `https://example.com/video/${image.id}.mp4`,
            thumbnailUrl: image.url,
            provider: 'Evolink',
            sourceImageId: image.id,
            prompt: image.prompt,
            settings: {
              duration: 5,
              aspectRatio: '16:9',
              quality: 'standard',
              motionStrength: 'medium',
              style: 'realistic',
              fps: 30,
              promptEnhancement: true
            },
            metadata: {
              duration: 5,
              aspectRatio: '16:9',
              resolution: '1280x720',
              format: 'mp4',
              fileSize: 5242880,
              frameRate: 30,
              model: 'veo3.1-fast'
            },
            createdAt: new Date()
          };

          addGeneratedVideo(selectedSceneId, generatedVideo);
        }

        return { success: true, count: selectedImages.length };
      }, 'generateVideo', {
        selectedImageIds,
        sceneId: selectedSceneId
      });

      if (result) {
        await loadVideoHistory();
        alert(`成功生成 ${result.count} 个视频！`);
      }

    } catch (error) {
      console.error('Video generation failed:', error);
      alert('视频生成失败，请查看错误信息并重试');
    } finally {
      setIsGenerating(false);
    }
  };

  // 错误重置函数
  const resetErrors = () => {
    setComponentError(null);
    setNetworkError(null);
    setApiErrors(new Map());
  };

  // 错误显示组件
  const ErrorDisplay = ({ errors, onDismiss }: { errors: Map<string, string>, onDismiss: () => void }) => {
    if (errors.size === 0) return null;

    return (
      <div className="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg">
        <div className="flex items-center justify-between mb-2">
          <div className="flex items-center space-x-2">
            <AlertTriangle className="w-5 h-5 text-red-600" />
            <span className="font-medium text-red-800">发现了错误</span>
          </div>
          <button
            onClick={onDismiss}
            className="text-red-600 hover:text-red-800"
          >
            ×
          </button>
        </div>
        <div className="space-y-1">
          {Array.from(errors.entries()).map(([key, message]) => (
            <div key={key} className="text-sm text-red-700">
              <span className="font-medium">{key}:</span> {message}
            </div>
          ))}
        </div>
      </div>
    );
  };

  // 如果有组件级错误，显示错误页面
  if (componentError) {
    return (
      <div className="flex items-center justify-center min-h-64 bg-gray-50 border border-gray-200 rounded-lg p-8">
        <div className="text-center max-w-md">
          <div className="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <AlertTriangle className="w-8 h-8 text-red-600" />
          </div>
          <h3 className="text-lg font-medium text-gray-900 mb-2">
            视频生成组件遇到错误
          </h3>
          <p className="text-sm text-gray-600 mb-4">
            {componentError.message}
          </p>
          <div className="space-y-2">
            <button
              onClick={resetErrors}
              className="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
            >
              重试
            </button>
            <button
              onClick={() => window.location.reload()}
              className="w-full px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors"
            >
              刷新页面
            </button>
          </div>
        </div>
      </div>
    );
  }

  return (
    <div className={`video-generation-component ${className}`}>
      {/* 错误显示 */}
      <ErrorDisplay
        errors={new Map([...Array.from(apiErrors.entries()), ...(networkError ? [['network', networkError]] : [])])}
        onDismiss={resetErrors}
      />

      {/* 网络错误提示 */}
      {networkError && (
        <div className="mb-4 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
          <div className="flex items-center space-x-2">
            <AlertCircle className="w-5 h-5 text-yellow-600" />
            <span className="text-yellow-800">{networkError}</span>
          </div>
        </div>
      )}

      {/* 主要内容区域 */}
      <div className="space-y-6">
        {/* 场景和图片选择 */}
        <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h2 className="text-lg font-medium text-gray-900 mb-4">视频生成</h2>

          {/* 场景选择 */}
          <div className="mb-4">
            <label className="block text-sm font-medium text-gray-700 mb-2">
              选择场景
            </label>
            <select
              value={selectedSceneId}
              onChange={(e) => setSelectedSceneId(e.target.value)}
              className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
              <option value="">请选择场景</option>
              {scenes.map(scene => (
                <option key={scene.id} value={scene.id}>
                  场景 {scene.sceneNumber}: {scene.title}
                </option>
              ))}
            </select>
          </div>

          {/* 生成按钮 */}
          <button
            onClick={handleGenerateVideo}
            disabled={isGenerating || !selectedSceneId || selectedImageIds.length === 0}
            className="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
          >
            {isGenerating ? (
              <div className="flex items-center justify-center space-x-2">
                <RotateCw className="w-4 h-4 animate-spin" />
                <span>生成中...</span>
              </div>
            ) : (
              <div className="flex items-center justify-center space-x-2">
                <Film className="w-4 h-4" />
                <span>生成视频</span>
              </div>
            )}
          </button>
        </div>

        {/* 生成历史 */}
        {generationHistory.length > 0 && (
          <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 className="text-lg font-medium text-gray-900 mb-4">生成历史</h2>
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
              {generationHistory.map(video => (
                <div key={video.id} className="border border-gray-200 rounded-lg p-4">
                  <div className="aspect-video bg-gray-100 rounded mb-2"></div>
                  <div className="text-sm text-gray-700 truncate">{video.prompt}</div>
                  <div className="text-xs text-gray-500 mt-1">
                    {new Date(video.createdAt).toLocaleString('zh-CN')}
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
  );
};

export default VideoGenerationWithErrorHandling;